{
    "name": "josbeir/cakephp-latte-view",
    "description": "Latte view plugin for CakePHP",
    "type": "cakephp-plugin",
    "license": "MIT",
    "version": "0.1.0",
    "require": {
        "php": ">=8.1",
        "cakephp/cakephp": "5.2.*",
        "latte/latte": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1 || ^11.1.3 || ^12.0",
        "cakephp/cakephp-codesniffer": "^5.2",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "LatteView\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LatteView\\TestApp\\": "tests/test_app/src/",
            "LatteView\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "lowest": "validate-prefer-lowest",
        "test": "phpunit --colors=always",
        "test-coverage": "export XDEBUG_MODE=coverage; phpunit --log-junit tmp/coverage/unitreport.xml --coverage-html tmp/coverage --coverage-clover tmp/coverage/coverage.xml",
        "stan": "phpstan analyse",
        "cs-check": "phpcs --colors -p -s",
        "cs-fix": "phpcbf --colors -p -s",
        "rector": "rector --ansi"
    }
}
